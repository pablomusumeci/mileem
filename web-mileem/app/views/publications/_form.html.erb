    <%= error_span(@publication[:description]) %>
  </div>
  <div class="form-group">
    <%= f.label :additional_info, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :additional_info, :class => 'form-control' %>
    </div>
    <%= error_span(@publication[:additional_info]) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">  
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                publications_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>

<%= javascript_tag do %>
// https://developers.google.com/places/documentation/autocomplete#place_types
var addressPicker = new AddressPicker(
  {
    autocompleteService: {
      types: ['address'], 
      componentRestrictions: {country: 'AR'}
    }
  }
);

$('#address').typeahead(null, {
  displayKey: 'description',
  source: addressPicker.ttAdapter()
});
<% end %>