<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Web Mileem" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Web Mileem" %>">
    <%= stylesheet_link_tag 'application', debug: true %>
    <%= stylesheet_link_tag "bootstrap-ubuntu", debug: true %>
    <%= javascript_include_tag 'application', debug: true %>

    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
      <%= render 'layouts/messages' %>
      <%= yield %>
    </main>
  </body>
</html>
