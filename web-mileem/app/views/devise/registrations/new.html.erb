
<div class="row">
	<div class="col-md-7">
		<br><br>
		<%= render partial: 'devise/images' %>
	</div>	
	<div class="col-md-5">
		<br>
		<div class="page-header">
			<h1 class="col-md-offset-2">Registrarse</h1>
		</div>
		<% devise_error_messages! %>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<div class="col-md-8 col-md-offset-2">
			<label for="username" class="control-label">Razón Social</label>
			<%= f.text_field :username, autofocus: true, 
			:class => 'form-control', :required => false %>

			<label for="email" class="control-label">Email</label>
			<%= f.email_field :email, autofocus: true, :class => 'form-control', 
			:required => true %>

			<label for="phone_number" class="control-label">Teléfono (solo números)</label>
			<%= f.text_field :phone_number, autofocus: true, pattern: "[0-9]*",
			:class => 'form-control', :required => false %>

			<label for="password" class="control-label">Contraseña</label>
			<%= f.password_field :password, autocomplete: "off", :class => 'form-control', :required => true %>

			<label for="password_confirmation" class="control-label">Confirmar contraseña</label>
			<%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :required => true %>
			<br>
			<div><%= f.submit "Registrarme!", :class =>"btn btn-md btn-primary" %></div>		
		</div>
		<% end %>
	</div>	
</div>