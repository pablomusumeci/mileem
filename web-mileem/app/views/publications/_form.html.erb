<%= form_for @publication, :html => { :class => "form-horizontal publication" } do |f| %>

  <% if @publication.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@publication.errors.count, "error") %> prohibited this publication from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @publication.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

<input type="hidden" class="form-control" id="publication_lat" name="publication[lat]">
<input type="hidden" class="form-control" id="publication_lng" name="publication[lng]">

<div class="row">
  <div class="col-md-2">
     <label for="effective_date" class="control-label">Fecha
        <span class="required">*</span> 
     </label>
     <div class="input-group">
     <%= f.text_field :effective_date, :required => true ,:disabled => (modoEdicion && @publication.isActive) , :class => 'form-control', 'data-behaviour' => 'datepicker', 
     "data-date-format" => "dd/mm/yyyy" %>
      <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
      </div>
  </div>
  <div class="col-md-2">
    <label for="plan" class="control-label">Plan
      <span class="required">*</span>
    </label>
     <%= f.collection_select(:plan_id, Plan.all , :id, :name, {:prompt   => "Seleccione una opción"}, { :class =>"form-control" ,:required => true }) %>
   </div>
  <div class="col-md-2">
    <label for="operation" class="control-label"></label>
    <div class="radio">
      <label class="radio-inline">
        <%= f.radio_button :operation, "Alquiler", :checked => 'checked' %><p>Alquiler</p>
      </label>
      <label class="radio-inline">  
        <%= f.radio_button :operation, "Venta" %><p>Venta</p>
      </label>
    </div>   
  </div>
  <div class="col-md-6">
    <div id="alertaErrorDireccion" class="alert alert-danger" role="alert ">
    La dirección debe pertencer a la Ciudad Autónoma de Buenos Aires.
    </div>
  </div>

</div>

<div class="row">  
  <div class="col-md-2">
    <label for="neighbourhood" class="control-label">Barrio
      <span class="required">*</span>
    </label>
     <%= f.collection_select(:neighbourhood_id, Neighbourhood.all , :id, :name, {:prompt   => "Seleccione una opción"}, { :class =>"form-control" ,:required => true, :disabled => (modoEdicion && @publication.isActive)  }) %>
   </div>

  <div class="col-md-4">
  <div class="form-group" id="fg-address">
    <label for="address" class="control-label">Dirección
      <span class="required">*</span>
    </label>
      <input id="publication_address" name="publication[address]" class="form-control" type="text" placeholder="Autocompletado automático" required="required" <%= (modoEdicion && @publication.isActive)  ? "disabled" : "" %> >
  </div>
  </div>


  <div class="col-md-2">
    <label for="floor" class="control-label">Piso</label>
    <%= f.number_field :floor, :class => 'form-control' , step: 1 , min: 0 %>
  </div>
  <div class="col-md-2">
    <label for="apartment" class="control-label">Departamento</label>
    <%= f.text_field :apartment, :class => 'form-control' %>
  </div>

  <div class="col-md-2">
    <label for="antiquity" class="control-label">Antiguedad</label>
    <%= f.number_field :antiquity,  :class => 'form-control',step: 1, min:0 %>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <div class="row">
      <div class="col-md-4">
        <label for="inmueble" class="control-label">Tipos de inmueble</label>
        <%= f.collection_select(:property_type_id, PropertyType.all , :id, :name, {:prompt   => "Seleccione una opción"}, { :class =>"form-control" } ) %>  
      </div>
      <div class="col-md-4">
        <label for="number_spaces" class="control-label">Ambientes</label>
        <%= f.number_field :number_spaces, :class => 'form-control',step: 1, min: 0 %>
      </div>
      <div class="col-md-4">
        <label for="surface" class="control-label">Superficie (m2)</label>
        <%= f.number_field :surface, :class => 'form-control',step: 1, min:0 %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <label for="price" class="control-label">Precio
          <span class="required">*</span>
        </label>
        <%= f.number_field :price, :class => 'form-control', :required => true, step: 0.01 , min: 0 %>
      </div>
      <div class="col-md-4">
        <label for="expenses" class="control-label">Expensas</label>
        <%= f.number_field :expenses, :class => 'form-control', step: 0.01, min:0 %>
      </div>
      <div class="col-md-4">
        <label for="currency" class="control-label"></label>
        <div class="radio">
          <% Currency.all.each do |c| %>
          <label class="radio-inline">
            <%= f.radio_button :currency_id , c.id , :checked => (@publication.currency_id == c.id) ? 'checked' : "" %><p> <%= c.abreviatura %></p>
          </label>
        <% end %>  
        </div>   
      </div>
    </div>

    <div class="row">
      <div class="col-md-10"> 
          <label for="description" class="control-label">Descripción</label>
          <%= f.text_area :description, :class => 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-10"> 
          <label for="additional_info" class="control-label">Información Adicional</label>
          <%= f.text_area :additional_info, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
  <br>
    <div class="panel panel-primary">
      <div class="panel-body">
      <div class="map_container">
    <div id="map" class="map_canvas"></div>
</div>
        <!-- <div id="map" style="width:500px;height:300px;"></div> -->
      </div>
    </div>
  </div>
</div>

<br>
  <div class="form-group">
    <div class="col-md-4 ">  
      <%= f.submit modoEdicion ? 'Actualizar' : 'Crear', :class => 'btn btn-primary', :id => 'submitButton' %>
      <%= link_to 'Cancelar', publications_path, :class => 'btn btn-default' %>
    </div>
  </div>
<br>
<% end %>

<script type="text/javascript" >

  function dentroDeBsAs(placeResult){
    if (typeof(placeResult.address_components) == 'undefined' || typeof(placeResult.address_components[4]) == 'undefined'){
      console.log("placeResult es undefined!");
      return false;
    } else if ((placeResult.address_components[4].long_name != 'Autonomous City of Buenos Aires')
    && (placeResult.address_components[4].long_name != "Ciudad Autónoma de Buenos Aires")) {
      console.log(placeResult.address_components[4].long_name + " no es buenos aires!");
      return false;
    }
      return true;
  }

  var ready;
  var addressPicker;
  ready = function() {
    $("#alertaErrorDireccion").hide();

    // https://developers.google.com/places/documentation/autocomplete#place_types
    var addressPicker = new AddressPicker(
      {
        autocompleteService: {
          types: ['address'], 
          componentRestrictions: {country: 'AR'}
        },
        map: {
          id: '#map',
          options: {
            <% if @publication.lat.nil? or @publication.lng.nil? %>
            zoom: 12,
            center: new google.maps.LatLng(-34.6037232, -58.3815931),
            <% else  %>
            zoom: 16,
            center: new google.maps.LatLng(<%= @publication.lat %>, <%= @publication.lng %>),
            <% end %>
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            styles: mapStyle
          }
        }
      }
    );

    $('#publication_address').typeahead(null, {
      displayKey: 'description',
      source: addressPicker.ttAdapter()
    });

    $('#publication_effective_date').datepicker(
      {
        language: "es",
        startDate: "<%= DateTime.now.strftime("%d/%m/%Y") %>",
        autoclose: true,
        todayHighlight: true
      }
    );

    <% if not @publication.address.blank? %>
      $('#publication_address').typeahead('val', "<%= @publication.address %>");
      $('#publication_lat').val(<%= @publication.lat %>);
      $('#publication_lng').val(<%= @publication.lng %>);
    <% end %>

    <% if not @publication.lat.nil? and not @publication.lng.nil? %>
      var marker = new google.maps.Marker({
        position: new google.maps.LatLng(<%= @publication.lat %>, <%= @publication.lng %>),
        map: addressPicker.map,
        title: '<%= @publication.address %>'
      });
    <% end %>

    $('#publication_address').bind("typeahead:selected", addressPicker.updateMap);
    $('#publication_address').bind("typeahead:cursorchanged", addressPicker.updateMap);

    addressPicker.bindDefaultTypeaheadEvent($('#address'))
    $(addressPicker).on('addresspicker:selected', function (event, result) {

      if (! dentroDeBsAs(result.placeResult)){
         $('#fg-address').addClass("has-error");
         $('#fg-address').addClass("has-error");
         $("#alertaErrorDireccion").show();
         $('#submitButton').addClass("disabled");
      } else {
         $('#fg-address').removeClass("has-error");
         $('#fg-address').addClass("has-success");
         $('#submitButton').removeClass("disabled");
         $("#alertaErrorDireccion").hide();
      }

      $('#publication_lat').val(result.latitude);
      $('#publication_lng').val(result.longitude);
      $('#publication_address').typeahead('val', result.placeResult.formatted_address);
    });
  }

  $(document).ready(ready);
  $(document).on('page:load', ready);
</script>
