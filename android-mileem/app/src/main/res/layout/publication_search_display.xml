<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:minHeight="70dp"
        android:baselineAligned="false"
        android:clickable="false"
        android:animateLayoutChanges="false">

        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:minWidth="70dp"
            android:src="@drawable/house" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="120dip"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/PublicationStreetID"
                        android:name="street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:singleLine="false"
                        android:autoText="false"
                        android:textStyle="bold" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/numberSpaces"
                        android:id="@+id/textView5" />

                    <TextView
                        android:id="@+id/PublicationSpacesID"
                        android:name="price"
                        android:layout_width="37dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_weight="0.16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/surface"
                        android:id="@+id/textView9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/PublicationSurfaceId"
                        android:layout_weight="0.52"
                        android:textStyle="bold" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/PublicationOperationId"
                        android:textStyle="bold" />

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/PublicationPriceID"
                            android:name="price"
                            android:layout_width="124dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:gravity="right" />
                    </TableRow>

                </LinearLayout>

            </TableRow>

        </TableLayout>

    </TableRow>
</TableLayout>