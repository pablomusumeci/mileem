<hr>
<div class="page-header">
  <h1>Mis Publicaciones</h1>
</div>
<table class="table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Dirección</th>
      <th>Barrio</th>
      <th>Tipo de Inmueble</th>
      <th>Plan</th>
      <th>Tipo de Operacion</th>
      <th>Precio</th>
      <th>Fotos/ Videos</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @publications.each do |publication| %>
      <tr>
        <td><%= publication.effective_date %></td>
        <td><%= publication.address %></td>
        <td><%= publication.neighbourhood.name %></td>
        <td><%= publication.property_type.name %></td>
        <td></td>
        <td><%= publication.operation %></td>
        <td><%= publication.currency.abreviatura %> <%= publication.price %></td>
        <td>
          <div class="btn btn-default btn-xs"><span class="glyphicon glyphicon-picture"></span></div>
          <div class="btn btn-default btn-xs"><span class="glyphicon glyphicon-facetime-video"></span></div>
        </td>
        <td>
          <%= button_to publication , class: "btn btn-default btn-xs", :method => :get do %>
            <span class="glyphicon glyphicon-eye-open "></span>
          <% end %>
          <%= button_to edit_publication_path(publication) , class: "btn btn-default btn-xs", :method => :get do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= button_to publication,class: "btn btn-danger btn-xs", method: :delete, data: {confirm: '¿Esta usted seguro que quiere eliminar la publicación?' } do %>
            <span class="glyphicon glyphicon-remove-circle"></span>
          <% end %>            
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "Nueva publicación", new_publication_path, :class => 'btn btn-primary' %>
